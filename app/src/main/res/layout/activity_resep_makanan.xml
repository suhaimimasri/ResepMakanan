<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.resepmakanan.ResepMakanan"
    android:background="@drawable/backgroundcolorful">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/backgroundpurple2"
            android:orientation="vertical">

            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="115dp"
                android:layout_height="115dp"
                android:padding="5dp"
                android:src="@drawable/logohomepage"
                android:background="@drawable/logoborder"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/tajuk"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:text="WARKOP STREET"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:padding="3dp"
                android:textSize="35dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/black"
                android:shadowDx="3"
                android:shadowDy="3"
                android:shadowRadius="1.5"
                android:background="@drawable/rectangletextview"
                android:fontFamily="@font/montserratregular"
                android:textColor="@color/graylight"/>
        </LinearLayout>
        <TextView
            android:layout_width="215dp"
            android:layout_height="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="185dp"
            android:text="'' Eat GOOD Feel GOOD ''"
            android:textAlignment="center"
            android:fontFamily="@font/questrial"
            android:textColor="@color/graylight"
            android:background="#1B1B1B" />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:id="@+id/resepview">

        </android.support.v7.widget.RecyclerView>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:alpha="0.6"
            android:layout_below="@+id/linear1"
            android:background="@drawable/gradientblacktransparent"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:alpha="0.6"
            android:layout_below="@+id/linear1"
            android:layout_marginTop="440dp"
            android:background="@drawable/gradientblackshadow"/>

    </RelativeLayout>



</LinearLayout>