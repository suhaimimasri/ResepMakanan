<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:id="@+id/parentLayout"
    android:shadowColor="@color/black"
    android:background="@drawable/reseplistbackground">

    <TextView
        android:id="@+id/resep"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:text="AYAM GEPREK"
        android:fontFamily="@font/montserratregular"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="1.5"
        android:textColor="@color/graylight"
        android:background="@drawable/recblack"/>

    <ImageView
        android:id="@+id/imageresep"
        android:layout_width="match_parent"
        android:layout_below="@+id/resep"
        android:layout_height="match_parent"
        android:soundEffectsEnabled="true"
        android:src="@drawable/ayamkremes"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_below="@+id/resep"
        android:layout_marginTop="20dp"
        android:background="@color/graylight"
        android:alpha="0.8" />

    <TextView
        android:id="@+id/resepdesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/resep"
        android:layout_marginTop="20dp"
        android:text="Description"
        android:textColor="@color/black"
        android:padding="10dp"
        android:textSize="20dp"
        android:maxLength="150"
        android:fontFamily="@font/montserratregular"
        android:textAlignment="center"/>

</RelativeLayout>